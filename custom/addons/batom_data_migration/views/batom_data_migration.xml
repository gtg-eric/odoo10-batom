<?xml version="1.0"?>
<odoo>
    <data>
        <record id="batom_product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">batom.product.template.common.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']//div[@name='options']" position="inside">
                    <div>
                        <field name="x_is_process"/>
                        <label for="x_is_process"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_partner_migration_tree">
            <field name="name">batom.partner_migration.tree</field>
            <field name="model">batom.partner_migration</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Partner Migration" colors="red:in_short_name!=chi_short_name;red:in_full_name!=chi_full_name">
                    <field name="type"/>
                    <field name="in_id"/>
                    <field name="in_short_name"/>
                    <field name="in_full_name" invisible="1"/>
                    <field name="chi_id"/>
                    <field name="chi_short_name"/>
                    <field name="chi_full_name" invisible="1"/>
                    <field name="odoo_id"/>
                    <field name="odoo_short_name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_partner_migration_form">
            <field name="name">base.partner_migration.form</field>
            <field name="model">batom.partner_migration</field>
            <field name="arch" type="xml">
                <form string="Partner Data Migration">
                    <sheet>
                        <group col="1">
                            <field name="type"/>
                            <field name="in_id"/>
                            <field name="in_short_name"/>
                            <field name="in_full_name"/>
                            <field name="chi_id"/>
                            <field name="chi_short_name"/>
                            <field name="chi_full_name"/>
                            <field name="odoo_id"/>
                            <field name="odoo_short_name"/>
                            <field name="odoo_full_name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_partner_migration_refresh" model="ir.ui.view">
            <field name="name">Refresh/Apply Partner Migration Table</field>
            <field name="model">batom.partner_migration_refresh</field>
            <field name="arch" type="xml">
                <form string="Refresh Partner Migration Table">
                    <p>
                        Refresh/Apply the partner data migration table.
                    </p>
                    <footer>
                        <button name="refresh_partner_data" string="Refresh" type="object" class="btn-primary"/>
                        <button name="apply_partner_data" string="Apply" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
           </field>
        </record>

        <record id="action_view_partner_migration_refresh" model="ir.actions.act_window">
            <field name="name">Refresh Partner Migration Table</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">batom.partner_migration_refresh</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.actions.act_window" id="action_partner_migration">
            <field name="name">Partner Data Migration</field>
            <field name="res_model">batom.partner_migration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_partner_migration_tree"/>
        </record>

        <record id="view_create_supplier_warehouses" model="ir.ui.view">
            <field name="name">Create Supplier Warehouses</field>
            <field name="model">batom.create_supplier_warehouses</field>
            <field name="arch" type="xml">
                <form string="Create Supplier Warehouses">
                    <group>
                        <field name="root_location_id"/>
                    </group>
                    <footer>
                        <button name="create_supplier_warehouses" string="Create" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
           </field>
        </record>

        <record id="action_create_supplier_warehouse" model="ir.actions.act_window">
            <field name="name">Create Supplier Warehouses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">batom.create_supplier_warehouses</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_migrate_product" model="ir.ui.view">
            <field name="name">Migrate Products</field>
            <field name="model">batom.migrate_product</field>
            <field name="arch" type="xml">
                <form string="Migrate Products">
                    <footer>
                        <button name="migrate_product" string="Migrate" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
           </field>
        </record>

        <record id="action_migrate_product" model="ir.actions.act_window">
            <field name="name">Migrate Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">batom.migrate_product</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_migrate_bom" model="ir.ui.view">
            <field name="name">Migrate BoM</field>
            <field name="model">batom.migrate_bom</field>
            <field name="arch" type="xml">
                <form string="Migrate Bom">
                    <footer>
                        <button name="migrate_bom" string="Migrate" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
           </field>
        </record>

        <record id="action_migrate_bom" model="ir.actions.act_window">
            <field name="name">Migrate BoM</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">batom.migrate_bom</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_data_source_table_tree" model="ir.ui.view">
            <field name="name">Table Tree</field>
            <field name="model">batom.data_source_table</field>
            <field name="arch" type="xml">
                <tree string="Table">
                    <field name="name"/>
                    <field name="record_count"/>
                    <field name="mapping"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="search_data_source_table_filter">
            <field name="name">Table Filter</field>
            <field name="model">batom.data_source_table</field>
            <field name="arch" type="xml">
                <search string="Cutter Model Filter">
                    <field name="name"/>
                    <field name="mapping"/>
                    <field name="remarks"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>
        <record id="action_data_source_table" model="ir.actions.act_window">
            <field name="name">Table</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">batom.data_source_table</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_data_source_table_tree"/>
            <field name="search_view_id" ref="search_data_source_table_filter"/>
        </record>
        
        <record id="view_data_source_table_form" model="ir.ui.view">
            <field name="name">batom.data_source_table.form</field>
            <field name="model">batom.data_source_table</field>
            <field name="arch" type="xml">
                <form string="Table">
                    <sheet>
                        <group>
                            <group name="data">
                                <field name="name"/>
                                <field name="dbsource"/>
                                <field name="table"/>
                                <field name="record_count"/>
                            </group>
                            <group name="data">
                                <field name="mapping"/>
                                <field name="remarks"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Columns">
                                <field name="column_ids">
                                    <tree editable="bottom">
                                        <field name="column"/>
                                        <field name="data_type"/>
                                        <field name="mapping"/>
                                        <field name="remarks"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_data_source_column_tree" model="ir.ui.view">
            <field name="name">Table Tree</field>
            <field name="model">batom.data_source_column</field>
            <field name="arch" type="xml">
                <tree string="Table">
                    <field name="name"/>
                    <field name="data_type"/>
                    <field name="mapping"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="search_data_source_column_filter">
            <field name="name">Table Filter</field>
            <field name="model">batom.data_source_column</field>
            <field name="arch" type="xml">
                <search string="Cutter Model Filter">
                    <field name="name"/>
                    <field name="data_type"/>
                    <field name="mapping"/>
                    <field name="remarks"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>
        <record id="action_data_source_column" model="ir.actions.act_window">
            <field name="name">Table</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">batom.data_source_column</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_data_source_column_tree"/>
            <field name="search_view_id" ref="search_data_source_column_filter"/>
        </record>
        
        <record id="view_data_source_column_form" model="ir.ui.view">
            <field name="name">batom.data_source_column.form</field>
            <field name="model">batom.data_source_column</field>
            <field name="arch" type="xml">
                <form string="Table">
                    <sheet>
                        <group>
                            <group name="data">
                                <field name="name"/>
                                <field name="table_id"/>
                                <field name="column"/>
                                <field name="data_type"/>
                            </group>
                            <group name="data">
                                <field name="mapping"/>
                                <field name="remarks"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="menu_data_migration"
            name="Data Migration"
            sequence="950"/>
        
        <menuitem id="menu_data_source"
            name="Data Source"
            parent="menu_data_migration"
            sequence="10"/>
        <menuitem id="menu_data_source_table"
            name="Tables"
            action="action_data_source_table"
            parent="menu_data_source"
            sequence="10"/>
        <menuitem id="menu_data_source_column"
            name="Columns"
            action="action_data_source_column"
            parent="menu_data_source"
            sequence="20"/>
        
        <menuitem id="menu_data_migration_procedure"
            name="Data Migration Procedure" 
            parent="menu_data_migration"
            sequence="20"/>
        <menuitem name="Refresh/Apply Partner" id="menu_partner_migration_refresh" parent="menu_data_migration_procedure" action="action_view_partner_migration_refresh"/>
        <menuitem name="Partner" id="menu_partner_migration" parent="menu_data_migration_procedure" action="action_partner_migration"/>
        <menuitem name="Create Supplier Warehouses" id="menu_create_supplier_warehouse" parent="menu_data_migration_procedure" action="action_create_supplier_warehouse"/>
        <menuitem name="Migrate Products" id="menu_migrate_product" parent="menu_data_migration_procedure" action="action_migrate_product"/>
        <menuitem name="Migrate BoM" id="menu_migrate_bom" parent="menu_data_migration_procedure" action="action_migrate_bom"/>
    </data>
</odoo>
