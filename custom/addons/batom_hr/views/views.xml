<openerp>
  <data>
    <record id="my_view_department_form_inherit" model="ir.ui.view">
        <field name="name">batom.department.form.inherit</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="x_code"/>
            </xpath>
        </field>
    </record>
    
    <record id="my_view_employee_tree_inherit" model="ir.ui.view">
        <field name="name">batom.employee.tree.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="code"/>
            </xpath>
        </field>
    </record>
    
    <record id="my_vview_employee_filter_inherit" model="ir.ui.view">
        <field name="name">batom.employee.filter.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="code"/>
            </xpath>
        </field>
    </record>

    <record id="my_view_employee_form_inherit" model="ir.ui.view">
        <field name="name">batom.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="inside">
                <field name="code"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="x_on_board_date"/>
            </xpath>
            <xpath expr="//field[@name='x_on_board_date']" position="after">
                <field name="x_resignation_date"/>
            </xpath>
            <xpath expr="//field[@name='x_resignation_date']" position="after">
                <field name="notes"/>
            </xpath>
        </field>
    </record>

